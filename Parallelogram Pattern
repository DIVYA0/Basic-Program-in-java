import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
Scanner Sc=new Scanner(System.in);
		int n=Sc.nextInt();
		int i=1;
		while(i<=n) {
			int space=1;
			while(space<i) {
				System.out.print(" ");
				space++;
			}
			int star=1;
			while(star<=n) {
				
				System.out.print("*");
				star++;
			}
			System.out.println();
			i++;
		}


	}
}
